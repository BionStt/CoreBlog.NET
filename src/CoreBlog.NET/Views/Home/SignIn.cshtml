@using System.Collections.Generic
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager


<div class="container">
    <h1 class="header center orange-text">CoreBlog.NET</h1>
    <div class="row">
        <div class="col s12 m6 offset-m3">
            <div class="card darken-1">
                <div class="card-content">
                    <span class="card-title">Sign In</span>
                    <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@Model.ReturnUrl" method="post" class="form-horizontal">

                        <div class="row">
                            <div asp-validation-summary="All" class="text-danger"></div>

                            <div class="input-field col s8 offset-m2">
                                <input asp-for="Email" class="" />
                                <label asp-for="Email" class=""></label>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="input-field col s8 offset-m2">
                                <input asp-for="Password" class="" />
                                <label asp-for="Password" class=""></label>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <button class="btn waves-effect waves-light col s6 offset-m3" type="submit" name="action">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="row center">
                <a href="#">Create an account</a>
            </div>
        </div>
    </div>
</div>
